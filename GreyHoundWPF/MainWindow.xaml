<Window x:Class="GreyHoundWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GreyHoundWPF"
        xmlns:coll="clr-namespace:System.Collections.Generic;assembly=System" d:DataContext="{d:DesignInstance Type=local:Program}"
        mc:Ignorable="d"
        Title="GreyHound" Height="1080" Width="1920">
    <Grid x:Name="Layout" Background="#fff">
        <Grid.RowDefinitions>
            <RowDefinition Height="720"/>
            <RowDefinition />
            <RowDefinition Height="10"/>
            
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="720"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <Grid x:Name="RadarGrid" Grid.Row="0" ShowGridLines="True" Grid.Column="1" Width="720" Height="720" Background="#085D1E" ClipToBounds="False">

            <Grid.ColumnDefinitions>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
            </Grid.RowDefinitions>

            <Ellipse Grid.Column="{Binding ship1LocationY}" Grid.Row="{Binding ship1LocationX}"
                Fill="OrangeRed"
                Height="20"
                Width="20"
                />
            <Ellipse Grid.Column="{Binding ship2LocationY}" Grid.Row="{Binding ship2LocationX}"
                Fill="OrangeRed"
                Height="20"
                Width="20"
                />
            <Ellipse Grid.Column="{Binding ship3LocationY}" Grid.Row="{Binding ship3LocationX}"
                Fill="OrangeRed"
                Height="20"
                Width="20"
                />
            <Ellipse Grid.Column="{Binding playerLocationY}" Grid.Row="{Binding playerLocationX}"
                Fill="DeepSkyBlue"
                Height="20"
                Width="20"
                />

        </Grid>
        <Grid x:Name="playerStatusBar" Grid.Row="0" Grid.Column="0" Margin="0,10,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock Text="Player" Grid.Row="0" FontSize="24" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <StackPanel Orientation="Horizontal" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Health :  " FontSize="24"/>
                <TextBlock Text="{Binding playerHealth}"  FontSize="24"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Location :  " FontSize="24"/>
                <TextBlock Text="( " FontSize="24"/>
                <TextBlock Text="{Binding playerLocationX}" FontSize="24"/>
                <TextBlock Text=" , " FontSize="24"/>
                <TextBlock Text="{Binding playerLocationY}" FontSize="24"/>
                <TextBlock Text=")" FontSize="24"/>
            </StackPanel>
            
        </Grid>
        
        <Grid x:Name="EnemystatusBar" Grid.Row="0" Grid.Column="2" Margin="0,10,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock Text="Ship 1" Grid.Row="0" FontSize="24" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <StackPanel Orientation="Horizontal" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Health :  " FontSize="24"/>
                <TextBlock Text="{Binding ship1Health}"  FontSize="24"/>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Location :  " FontSize="24"/>
                <TextBlock Text="( " FontSize="24"/>
                <TextBlock Text="{Binding ship1LocationX}" FontSize="24"/>
                <TextBlock Text=" , " FontSize="24"/>
                <TextBlock Text="{Binding ship1LocationY}" FontSize="24"/>
                <TextBlock Text=")" FontSize="24"/>
            </StackPanel>

            <TextBlock Text="Ship 2" Grid.Row="4" FontSize="24" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <StackPanel Orientation="Horizontal" Grid.Row="5" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Health :  " FontSize="24"/>
                <TextBlock Text="{Binding ship2Health}" Grid.Row="3" FontSize="24"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Grid.Row="6" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Location :  " FontSize="24"/>
                <TextBlock Text="( " FontSize="24"/>
                <TextBlock Text="{Binding ship2LocationX}" FontSize="24"/>
                <TextBlock Text=" , " FontSize="24"/>
                <TextBlock Text="{Binding ship2LocationY}" FontSize="24"/>
                <TextBlock Text=")" FontSize="24"/>
            </StackPanel>

            <TextBlock Text="Ship 3" Grid.Row="8" FontSize="24" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <StackPanel Orientation="Horizontal" Grid.Row="9" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Health :  " FontSize="24"/>
                <TextBlock Text="{Binding ship3Health}" Grid.Row="3" FontSize="24"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Row="10" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Location :  " FontSize="24"/>
                <TextBlock Text="( " FontSize="24"/>
                <TextBlock Text="{Binding ship3LocationX}" FontSize="24"/>
                <TextBlock Text=" , " FontSize="24"/>
                <TextBlock Text="{Binding ship3LocationY}" FontSize="24"/>
                <TextBlock Text=")" FontSize="24"/>
            </StackPanel>
        </Grid>

        <Grid x:Name="ControlsBar" Grid.Row="1" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="X co-ordinates" Grid.Column="0" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
                <TextBlock Text="Y co-ordinates" Grid.Column="1" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
            </Grid>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <TextBox Grid.Column="0" FontSize="24" ></TextBox>
                <TextBox Grid.Column="1" FontSize="24" ></TextBox>
            </Grid>
            <Button Grid.Row="2" FontSize="24" Height="100" Background="Maroon" VerticalAlignment="Center" Margin="0,10,0,0">
                Fire
            </Button>
        </Grid>
        <Grid x:Name="movement" Grid.Row="1" Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="100"/>
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Grid.Row="0" Grid.Column="1" FontSize="24" Height="100" Background="DarkSlateBlue" VerticalAlignment="Center" Margin="5,0,5,0">
                Up
            </Button>
            <Button Grid.Row="1" Grid.Column="0" FontSize="24" Height="100" Background="DarkSlateBlue" VerticalAlignment="Center" Margin="10,0,0,0">
                Left
            </Button>
            <Button Grid.Row="2" Grid.Column="1" FontSize="24" Height="100" Background="DarkSlateBlue" VerticalAlignment="Center" Margin="5,0,5,0">
                Right
            </Button>
            <Button Grid.Row="1" Grid.Column="2" FontSize="24" Height="100" Background="DarkSlateBlue" VerticalAlignment="Center" Margin="0,0,10,0">
                Down
            </Button>
        </Grid>

    </Grid>
</Window>
